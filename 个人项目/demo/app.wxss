/* app.wxss */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn-primary {
  background: #4CAF50;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  margin: 10rpx 0;
}

.btn-secondary {
  background: #f5f5f5;
  color: #333;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  margin: 10rpx 0;
}

.btn-danger {
  background: #f44336;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  margin: 10rpx 0;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.input-field {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  height: 100rpx;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.space-between {
  justify-content: space-between;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.ml-20 {
  margin-left: 20rpx;
}

.mr-20 {
  margin-right: 20rpx;
}

.p-20 {
  padding: 20rpx;
}

.pt-20 {
  padding-top: 20rpx;
}

.pb-20 {
  padding-bottom: 20rpx;
}

.pl-20 {
  padding-left: 20rpx;
}

.pr-20 {
  padding-right: 20rpx;
}

.border-radius {
  border-radius: 8rpx;
}

.shadow {
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.text-primary {
  color: #4CAF50;
}

.text-secondary {
  color: #666;
}

.text-muted {
  color: #999;
}

.text-danger {
  color: #f44336;
}

.text-success {
  color: #4CAF50;
}

.text-warning {
  color: #ff9800;
}

.font-small {
  font-size: 24rpx;
}

.font-normal {
  font-size: 28rpx;
}

.font-large {
  font-size: 32rpx;
}

.font-title {
  font-size: 36rpx;
  font-weight: bold;
}

.divider {
  height: 1rpx;
  background: #eee;
  margin: 20rpx 0;
}

.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  border-radius: 20rpx;
  background: #4CAF50;
  color: #fff;
}

.badge-secondary {
  background: #f5f5f5;
  color: #666;
}

.badge-danger {
  background: #f44336;
  color: #fff;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.avatar-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
