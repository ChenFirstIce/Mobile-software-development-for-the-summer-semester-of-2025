/* pages/checkin/index/checkin.wxss */

.page-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  color: #666;
}

/* 位置信息区域 */
.location-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.location-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.location-actions {
  display: flex;
  flex-direction: column; 
  align-items: center;
  gap: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.refresh-btn {
  width: 80rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  border: none;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  position: relative;
  overflow: hidden;
}

.refresh-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.refresh-btn:active {
  background: linear-gradient(135deg, #45a049, #3d8b40);
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.4);
}

.refresh-btn:active::before {
  left: 100%;
}

.refresh-icon {
  font-size: 28rpx;
  color: white;
  font-weight: bold;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.custom-location-btn {
  height: 60rpx;
  background: linear-gradient(135deg, #2196F3, #1976D2);
  border: none;
  border-radius: 30rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
  position: relative;
  overflow: hidden;
}

.custom-location-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.custom-location-btn:active {
  background: linear-gradient(135deg, #1976D2, #1565C0);
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(33, 150, 243, 0.4);
}

.custom-location-btn:active::before {
  left: 100%;
}

.custom-icon {
  font-size: 24rpx;
  color: white;
  font-weight: bold;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.location-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.location-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.location-label {
  font-size: 26rpx;
  color: #666;
  min-width: 80rpx;
}

.location-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

/* 打卡表单 */
.checkin-form {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.form-section {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.input-field {
  width: 100%;
  height: 260rpx;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #f9f9f9;
  min-height: 120rpx;
}

.input-field:focus {
  border-color: #4CAF50;
  background: white;
}

.char-count {
  text-align: right;
  font-size: 22rpx;
  color: #999;
}

/* 打卡类型选择器 */
.type-selector {
  display: flex;
  gap: 20rpx;
}

.type-option {
  flex: 1;
  padding: 30rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.3s ease;
  background: white;
}

.type-option.active {
  border-color: #4CAF50;
  background: #f0f8f0;
}

.type-icon {
  display: block;
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.type-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 照片上传区域 */
.photo-upload {
  margin-top: 16rpx;
}

.photo-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.photo-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f5f5f5;
}

.uploaded-photo {
  width: 100%;
  height: 100%;
}

.photo-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(244, 67, 54, 0.9);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

.add-photo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  background: #f9f9f9;
  transition: all 0.3s ease;
}

.add-photo:active {
  border-color: #4CAF50;
  background: #f0f8f0;
}

.add-icon {
  font-size: 32rpx;
  color: #4CAF50;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 22rpx;
  color: #666;
}

.photo-tip {
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

/* 标签选择 */
.tags-container {
  margin-top: 16rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.tag-item {
  padding: 12rpx 20rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 20rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.tag-item.selected {
  background: #4CAF50;
  color: white;
}

.add-tag {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  background: #f9f9f9;
  transition: all 0.3s ease;
}

.add-tag:active {
  border-color: #4CAF50;
  background: #f0f8f0;
}

.add-icon {
  font-size: 32rpx;
  color: #4CAF50;
  margin-right: 12rpx;
}

.add-text {
  font-size: 26rpx;
  color: #666;
}

/* 相册选择器 */
.album-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f9f9f9;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.album-selector:active {
  background: #f0f0f0;
}

.album-text {
  font-size: 28rpx;
  color: #333;
}

.album-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 隐私设置 */
.privacy-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.privacy-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.privacy-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.privacy-desc {
  font-size: 22rpx;
  color: #666;
  margin-left: auto;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.btn-primary:disabled {
  background: #ccc;
  color: #999;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

/* 相册列表 */
.album-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.album-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.album-item.selected {
  border-color: #4CAF50;
  background: #f0f8f0;
}

.album-info {
  flex: 1;
}

.album-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.album-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.album-status {
  text-align: right;
}

.photo-count {
  font-size: 24rpx;
  color: #999;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .type-selector {
    flex-direction: column;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .photo-list {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .modal-content {
    width: 95%;
    margin: 20rpx;
  }
}
