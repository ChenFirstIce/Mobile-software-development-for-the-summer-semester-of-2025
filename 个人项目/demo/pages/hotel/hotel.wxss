/* pages/hotel/hotel.wxss */

.container {
  padding: 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  padding: 30rpx 30rpx 40rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 搜索区域 */
.search-section {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.search-form {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.input-field {
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.input-row {
  display: flex;
  gap: 20rpx;
}

.input-row .input-group {
  flex: 1;
}

.date-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  background: #fafafa;
}

.date-text {
  font-size: 28rpx;
  color: #333;
}

.date-icon {
  font-size: 32rpx;
  color: #666;
}

.picker-field {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  background: #fafafa;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-icon {
  font-size: 24rpx;
  color: #999;
}

.search-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  margin-top: 20rpx;
}

.search-btn:disabled {
  background: #ccc;
  color: #999;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 32rpx;
}

/* 筛选条件 */
.filter-section {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.filter-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.filter-options {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.filter-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.filter-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.price-range {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.price-input {
  flex: 1;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fafafa;
  text-align: center;
}

.price-separator {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}

.star-filters {
  display: flex;
  gap: 20rpx;
}

.star-btn {
  padding: 15rpx 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #666;
  background: white;
  transition: all 0.3s;
}

.star-btn.active {
  background: #4CAF50;
  color: white;
  border-color: #4CAF50;
}

.sort-options {
  display: flex;
  gap: 20rpx;
}

.sort-btn {
  padding: 15rpx 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #666;
  background: white;
  transition: all 0.3s;
}

.sort-btn.active {
  background: #4CAF50;
  color: white;
  border-color: #4CAF50;
}

/* 酒店列表 */
.hotel-list {
  margin: 20rpx;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.result-count {
  font-size: 28rpx;
  color: #666;
}

.view-mode {
  display: flex;
  gap: 10rpx;
}

.mode-btn {
  padding: 15rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: white;
  transition: all 0.3s;
}

.mode-btn.active {
  background: #4CAF50;
  color: white;
  border-color: #4CAF50;
}

.mode-icon {
  font-size: 28rpx;
}

/* 列表视图 */
.hotels-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.hotel-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 25rpx;
}

.hotel-image {
  position: relative;
  flex-shrink: 0;
}

.hotel-img {
  width: 200rpx;
  height: 150rpx;
  border-radius: 15rpx;
}

.hotel-rating {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 8rpx 12rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  gap: 5rpx;
}

.rating-text {
  font-size: 22rpx;
  font-weight: bold;
}

.rating-star {
  font-size: 20rpx;
}

.hotel-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.hotel-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.hotel-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.hotel-stars {
  display: flex;
  gap: 2rpx;
}

.star {
  font-size: 24rpx;
  color: #FFD700;
}

.hotel-address {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.hotel-features {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.feature-tag {
  background: #f0f8f0;
  color: #4CAF50;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.hotel-prices {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  min-width: 200rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.platform-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.platform-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 6rpx;
}

.platform-name {
  font-size: 24rpx;
  color: #333;
}

.price-info {
  text-align: right;
}

.price-value {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #e74c3c;
}

.price-desc {
  display: block;
  font-size: 22rpx;
  color: #666;
}

.hotel-actions {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  min-width: 150rpx;
}

.action-btn {
  padding: 15rpx 20rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
  background: #f0f0f0;
  color: #666;
}

.action-btn.primary {
  background: #4CAF50;
  color: white;
}

/* 网格视图 */
.hotels-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.hotel-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.card-image {
  position: relative;
}

.card-img {
  width: 100%;
  height: 200rpx;
}

.card-rating {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 8rpx 12rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  gap: 5rpx;
}

.card-content {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.card-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.3;
}

.card-address {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.card-stars {
  display: flex;
  gap: 2rpx;
}

.card-price {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.price-label {
  font-size: 22rpx;
  color: #999;
}

.price-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #e74c3c;
}

.price-platform {
  font-size: 22rpx;
  color: #666;
}

.card-actions {
  padding: 0 20rpx 20rpx;
}

.card-btn {
  width: 100%;
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 15rpx;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 30rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  line-height: 1.4;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 100rpx 30rpx;
  color: #999;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  animation: rotate 2s linear infinite;
}

.loading-text {
  font-size: 28rpx;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 价格详情弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-height: 80vh;
  overflow: hidden;
}

.price-modal {
  max-width: 600rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.price-comparison {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  background: #f8f8f8;
  border-radius: 15rpx;
}

.platform-header {
  display: flex;
  align-items: center;
  gap: 15rpx;
  min-width: 120rpx;
}

.platform-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 8rpx;
}

.platform-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

.price-details {
  flex: 1;
  text-align: center;
  margin: 0 20rpx;
}

.price-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #e74c3c;
  margin-bottom: 5rpx;
}

.price-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.price-note {
  display: block;
  font-size: 22rpx;
  color: #ff6b35;
}

.price-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  min-width: 120rpx;
}

.book-btn {
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
}

.view-btn {
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.btn-secondary {
  flex: 1;
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.btn-primary {
  flex: 1;
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .hotels-grid {
    grid-template-columns: 1fr;
  }
  
  .hotel-item {
    flex-direction: column;
  }
  
  .hotel-image {
    align-self: center;
  }
  
  .hotel-prices {
    min-width: auto;
  }
  
  .hotel-actions {
    min-width: auto;
  }
  
  .input-row {
    flex-direction: column;
  }
}

