/* pages/map/map.wxss */

.map-type-switcher {
  display: flex;
  background: white;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.type-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.type-btn.active {
  background: #4CAF50;
  color: white;
}

.type-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.type-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 搜索框样式 */
.search-container {
  position: relative;
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  gap: 20rpx;
}

/* 下拉框样式 */
.dropdown-container {
  position: relative;
  flex: 0 0 200rpx;
}

.dropdown {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  width: 187rpx;
}

.dropdown:active {
  border-color: #4CAF50;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.2);
}

.dropdown-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.dropdown-arrow {
  font-size: 20rpx;
  color: #666;
  transition: transform 0.3s ease;
}

.dropdown-arrow.open {
  transform: rotate(180deg);
}

.dropdown-menu {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
  opacity: 0;
  transform: translateY(-10rpx);
  transition: all 0.3s ease;
  pointer-events: none;
}

.dropdown-menu.show {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.dropdown-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item:active {
  background-color: #f5f5f5;
}

.item-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.item-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 搜索建议样式 */
.suggestions-container {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  z-index: 1000;
  margin-top: 10rpx;
}

.suggestions-list {
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  max-height: 400rpx;
  overflow-y: auto;
  border: 1rpx solid #e0e0e0;
}

.suggestion-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item:active {
  background-color: #f5f5f5;
}

.suggestion-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.suggestion-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.suggestion-address {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
  line-height: 1.3;
}

.suggestion-category {
  font-size: 22rpx;
  color: #999;
  background: #f0f0f0;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  display: inline-block;
  width: fit-content;
}

.suggestion-distance {
  margin-left: 16rpx;
}

.distance-text {
  font-size: 22rpx;
  color: #4CAF50;
  font-weight: 500;
}

.search-box {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 12rpx;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  flex: 1;
}

.search-box:focus-within {
  border-color: #4CAF50;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.2);
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

.search-input::placeholder {
  color: #999;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  padding: 10rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.search-icon:active {
  transform: scale(0.9);
}

.map-container {
  width: 100%;
  height: 600rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
}

.map {
  width: 100%;
  height: 100%;
}

.map-controls {
  position: absolute;
  right: 40rpx;
  top: 200rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  z-index: 100;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.control-btn:active {
  transform: scale(0.9);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.2);
}

.control-icon {
  font-size: 32rpx;
  color: #333;
}

/* 功能导航区域样式 */
.feature-section {
  margin-bottom: 40rpx;
}

.section-title {
  margin-bottom: 20rpx;
}

.title-text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.title-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.feature-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-card {
  display: flex;
  align-items: center;
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.feature-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.15);
}

.card-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
}

.card-content {
  flex: 1;
}

.card-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.card-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.card-arrow {
  font-size: 32rpx;
  color: #ccc;
  font-weight: bold;
}
