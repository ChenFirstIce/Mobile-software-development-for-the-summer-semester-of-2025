/* pages/entertainment/entertainment.wxss */

.container {
  padding: 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #FF6B6B, #FF8E8E);
  color: white;
  padding: 40rpx 30rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.4;
}

/* 功能卡片 */
.feature-cards {
  padding: 30rpx 20rpx;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.feature-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx 25rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.feature-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: var(--card-color);
}

.feature-card:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
}

.feature-card:nth-child(1) {
  --card-color: #FF6B6B;
}

.feature-card:nth-child(2) {
  --card-color: #4ECDC4;
}

.feature-card:nth-child(3) {
  --card-color: #45B7D1;
}

.feature-card:nth-child(4) {
  --card-color: #96CEB4;
}

.feature-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  display: block;
}

.feature-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.feature-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 最近活动 */
.recent-activities {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.activities-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.activities-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.view-all {
  font-size: 26rpx;
  color: #FF6B6B;
  cursor: pointer;
}

.activities-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 15rpx;
  transition: all 0.3s;
}

.activity-item:hover {
  background: #f0f8f0;
}

.activity-icon {
  flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.activity-icon.wheel {
  background: #FFE5E5;
  color: #FF6B6B;
}

.activity-icon.vote {
  background: #E5F5F5;
  color: #4ECDC4;
}

.activity-icon.game {
  background: #E5F0F5;
  color: #45B7D1;
}

.activity-icon.share {
  background: #E5F5E5;
  color: #96CEB4;
}

.activity-content {
  flex: 1;
}

.activity-text {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.activity-result {
  display: block;
  font-size: 22rpx;
  color: #666;
  font-style: italic;
}

.activity-time {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-top: 5rpx;
}

.activity-user {
  flex-shrink: 0;
  text-align: right;
}

.user-name {
  font-size: 24rpx;
  color: #FF6B6B;
  font-weight: 500;
}

/* 快速创建 */
.quick-create {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.quick-create-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.create-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.create-btn {
  background: linear-gradient(135deg, #FF6B6B, #FF8E8E);
  color: white;
  border: none;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  transition: all 0.3s;
}

.create-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.3);
}

.create-btn.secondary {
  background: linear-gradient(135deg, #4ECDC4, #6EDDD6);
}

.create-btn.secondary:hover {
  box-shadow: 0 6rpx 20rpx rgba(78, 205, 196, 0.3);
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  font-size: 26rpx;
}

/* 使用指南 */
.usage-guide {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.guide-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  text-align: center;
}

.guide-steps {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.guide-step {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 15rpx;
}

.step-number {
  flex-shrink: 0;
  width: 50rpx;
  height: 50rpx;
  background: #FF6B6B;
  color: white;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.step-content {
  flex: 1;
}

.step-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.step-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-height: 80vh;
  overflow: hidden;
}

.wheel-modal,
.vote-modal {
  max-width: 600rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 25rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
}

.form-input {
  width: 100%;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
  min-height: 100rpx;
  resize: none;
}

.options-section {
  margin-top: 20rpx;
}

.options-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.options-title {
  font-size: 26rpx;
  color: #666;
}

.add-option-btn {
  background: #4ECDC4;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 10rpx 15rpx;
  font-size: 22rpx;
}

.option-item {
  display: flex;
  gap: 15rpx;
  align-items: center;
  margin-bottom: 15rpx;
}

.option-input {
  flex: 1;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 15rpx;
  font-size: 26rpx;
  background: #fafafa;
}

.remove-option-btn {
  background: #ffebee;
  color: #f44336;
  border: none;
  border-radius: 8rpx;
  padding: 10rpx;
  font-size: 20rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.btn-secondary {
  flex: 1;
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.btn-primary {
  flex: 1;
  background: #FF6B6B;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .features-grid {
    grid-template-columns: 1fr;
  }
  
  .create-buttons {
    grid-template-columns: 1fr;
  }
  
  .guide-step {
    flex-direction: column;
    text-align: center;
  }
  
  .step-number {
    align-self: center;
  }
}

