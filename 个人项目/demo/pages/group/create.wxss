/* pages/group/create.wxss */

.container {
  padding: 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  padding: 30rpx 30rpx 40rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 创建表单 */
.create-form {
  padding: 20rpx;
}

.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.title-icon {
  font-size: 36rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 输入组 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
}

.input-field {
  width: 100%;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.textarea-field {
  width: 100%;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
  min-height: 120rpx;
  resize: none;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 类型选择器 */
.type-selector {
  display: flex;
  gap: 20rpx;
}

.type-option {
  flex: 1;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  padding: 25rpx 20rpx;
  text-align: center;
  background: white;
  transition: all 0.3s;
}

.type-option.active {
  border-color: #4CAF50;
  background: #f0f8f0;
}

.type-icon {
  display: block;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.type-text {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.type-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.3;
}

/* 成员数选择器 */
.member-selector {
  display: flex;
  gap: 20rpx;
}

.member-option {
  flex: 1;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  padding: 25rpx 20rpx;
  text-align: center;
  background: white;
  transition: all 0.3s;
}

.member-option.active {
  border-color: #4CAF50;
  background: #f0f8f0;
}

.member-count {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.member-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 验证方式选择器 */
.verification-options {
  display: flex;
  gap: 20rpx;
}

.verification-option {
  flex: 1;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  padding: 20rpx;
  text-align: center;
  background: white;
  transition: all 0.3s;
}

.verification-option.active {
  border-color: #4CAF50;
  background: #f0f8f0;
}

.option-icon {
  display: block;
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.option-text {
  display: block;
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 邀请码输入 */
.invite-code-section {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.code-input {
  flex: 1;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fafafa;
  text-align: center;
  font-family: monospace;
  letter-spacing: 2rpx;
}

.generate-btn {
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 25rpx;
  font-size: 26rpx;
  white-space: nowrap;
}

/* 功能列表 */
.feature-list {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.feature-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  background: #f8f8f8;
  border-radius: 15rpx;
}

.feature-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.feature-icon {
  font-size: 36rpx;
}

.feature-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.feature-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.3;
}

.feature-switch {
  transform: scale(0.9);
}

/* 封面设置 */
.cover-section {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.cover-preview {
  width: 100%;
  height: 300rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafafa;
  overflow: hidden;
}

.cover-img {
  width: 100%;
  height: 100%;
}

.cover-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15rpx;
  color: #999;
}

.placeholder-icon {
  font-size: 80rpx;
}

.placeholder-text {
  font-size: 28rpx;
}

.cover-actions {
  display: flex;
  gap: 20rpx;
}

.cover-btn {
  flex: 1;
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.cover-btn.danger {
  background: #ffebee;
  color: #f44336;
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  font-size: 26rpx;
}

/* 标签设置 */
.tags-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tags-display {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  min-height: 80rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  background: #e8f5e8;
  color: #4CAF50;
  padding: 12rpx 18rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
}

.tag-text {
  font-weight: 500;
}

.tag-remove {
  font-size: 20rpx;
  color: #4CAF50;
  padding: 2rpx;
}

.add-tag-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  border: 2rpx dashed #ccc;
  border-radius: 25rpx;
  padding: 12rpx 18rpx;
  color: #999;
  font-size: 24rpx;
  cursor: pointer;
}

.add-icon {
  font-size: 28rpx;
  font-weight: bold;
}

.tags-tip {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 20rpx;
  background: white;
  position: sticky;
  bottom: 0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.btn-secondary {
  flex: 1;
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 12rpx;
  padding: 25rpx;
  font-size: 28rpx;
}

.btn-primary {
  flex: 1;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 25rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
}

.btn-primary:disabled {
  background: #ccc;
  color: #999;
}

/* 标签选择弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-height: 80vh;
  overflow: hidden;
}

.tag-modal {
  max-width: 600rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.tag-categories {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.category-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.category-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.tag-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.tag-option {
  padding: 15rpx 20rpx;
  background: #f0f0f0;
  color: #666;
  border-radius: 25rpx;
  font-size: 24rpx;
  transition: all 0.3s;
}

.tag-option.selected {
  background: #4CAF50;
  color: white;
}

.custom-tag-input {
  display: flex;
  gap: 15rpx;
  align-items: center;
}

.custom-input {
  flex: 1;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 15rpx;
  font-size: 26rpx;
  background: #fafafa;
}

.add-custom-btn {
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 15rpx 20rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.add-custom-btn:disabled {
  background: #ccc;
  color: #999;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .type-selector,
  .member-selector,
  .verification-options {
    flex-direction: column;
  }
  
  .cover-actions {
    flex-direction: column;
  }
  
  .action-buttons {
    flex-direction: column;
  }
}

