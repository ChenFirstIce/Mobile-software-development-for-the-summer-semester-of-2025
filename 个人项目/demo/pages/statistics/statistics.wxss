/* pages/statistics/statistics.wxss */

.container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding: 20rpx;
}

.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 40rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.activity-level {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  border-radius: 16rpx;
  color: white;
}

.level-text {
  font-size: 32rpx;
  font-weight: bold;
}

.score-text {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 统计概览 */
.overview-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.overview-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.title-icon {
  width: 32rpx;
  height: 32rpx;
}

.overview-cards {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.overview-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.overview-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #4CAF50, #45a049);
}

.overview-card.primary {
  background: linear-gradient(135deg, #e3f2fd, #f3e5f5);
}

.overview-card.success {
  background: linear-gradient(135deg, #e8f5e8, #f1f8e9);
}

.overview-card.warning {
  background: linear-gradient(135deg, #fff3e0, #fce4ec);
}

.overview-card.info {
  background: linear-gradient(135deg, #e0f2f1, #e8eaf6);
}

.card-icon {
  font-size: 48rpx;
  width: 48rpx;
  height: 48rpx;
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card-label {
  font-size: 24rpx;
  color: #666;
}

/* 时间筛选 */
.filter-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.filter-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.time-filters {
  display: flex;
  gap: 16rpx;
}

.filter-btn {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-btn.active {
  background: #4CAF50;
  color: white;
}

/* 统计区域 */
.stats-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.stats-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 图表容器 */
.chart-container {
  text-align: center;
}

.chart-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 趋势图表 */
.trend-chart {
  display: flex;
  align-items: end;
  justify-content: space-around;
  height: 200rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

.chart-bar {
  position: relative;
  width: 40rpx;
  background: linear-gradient(to top, #4CAF50, #81C784);
  border-radius: 4rpx 4rpx 0 0;
  transition: all 0.3s ease;
}

.chart-bar:active {
  transform: scale(1.1);
}

.bar-tooltip {
  position: absolute;
  top: -40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 8rpx 12rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  white-space: nowrap;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.chart-bar:active .bar-tooltip {
  opacity: 1;
}

.chart-labels {
  display: flex;
  justify-content: space-around;
  font-size: 22rpx;
  color: #666;
}

/* 统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 照片统计 */
.photo-stats {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.stat-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.stat-row:last-child {
  border-bottom: none;
}

.stat-label {
  font-size: 26rpx;
  color: #333;
}

.stat-value {
  font-size: 26rpx;
  font-weight: bold;
  color: #4CAF50;
}


/* 地点统计 */
.location-stats {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.top-locations {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.location-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.location-rank {
  width: 40rpx;
  height: 40rpx;
  background: #4CAF50;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.location-info {
  flex: 1;
}

.location-name {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.location-count {
  font-size: 22rpx;
  color: #666;
}

.location-percentage {
  font-size: 24rpx;
  font-weight: bold;
  color: #4CAF50;
}


/* 标签云 */
.tag-cloud {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.tag-item {
  padding: 12rpx 20rpx;
  background: #4CAF50;
  color: white;
  border-radius: 20rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.tag-item:active {
  transform: scale(1.1);
}


/* 连续打卡样式 */
.streak-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.streak-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  border-radius: 12rpx;
  color: white;
}

.streak-icon {
  font-size: 40rpx;
}

.streak-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.streak-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.streak-value {
  font-size: 32rpx;
  font-weight: bold;
}

/* 群组统计样式 */
.group-stats {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.group-stat-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #4CAF50;
}

.stat-icon {
  font-size: 36rpx;
  width: 36rpx;
  height: 36rpx;
}

.section-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.stat-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

/* 活跃度图表 */
.activity-chart {
  margin-bottom: 30rpx;
}

.weekly-chart {
  display: flex;
  align-items: end;
  justify-content: space-around;
  height: 200rpx;
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.day-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.day-bar {
  width: 40rpx;
  background: linear-gradient(to top, #4CAF50, #81C784);
  border-radius: 4rpx 4rpx 0 0;
  min-height: 20rpx;
  transition: all 0.3s ease;
}

.day-label {
  font-size: 22rpx;
  color: #666;
}

.day-count {
  font-size: 20rpx;
  color: #999;
}

/* 活跃度等级卡片 */
.activity-level-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 16rpx;
  color: white;
}

.level-icon {
  font-size: 48rpx;
}

.level-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.level-title {
  font-size: 32rpx;
  font-weight: bold;
}

.level-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.level-progress {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  align-items: flex-end;
}

.progress-bar {
  width: 120rpx;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #45a049);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 20rpx;
  opacity: 0.8;
}

/* 成就系统 */
.achievements-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #4CAF50;
}

.achievement-icon {
  font-size: 40rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.achievement-image {
  width: 40rpx;
  height: 40rpx;
}

.achievement-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.achievement-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.achievement-desc {
  font-size: 24rpx;
  color: #666;
}

.achievement-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.achievement-status.unlocked {
  background: #4CAF50;
  color: white;
}

.no-achievements {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.no-achievements-text {
  font-size: 28rpx;
}

/* 分享按钮 */
.share-section {
  padding: 20rpx 0;
}

.share-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.share-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

.share-icon {
  font-size: 32rpx;
}

.share-text {
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .overview-cards {
    grid-template-columns: 1fr;
  }
  
  .time-filters {
    flex-wrap: wrap;
  }
  
  .filter-btn {
    min-width: 120rpx;
  }
  
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .group-stats {
    grid-template-columns: 1fr;
  }
  
  .streak-section {
    flex-direction: column;
  }
  
  .trend-chart {
    height: 150rpx;
  }
  
  .chart-bar {
    width: 30rpx;
  }
  
  .weekly-chart {
    height: 150rpx;
  }
  
  .day-bar {
    width: 30rpx;
  }
}
