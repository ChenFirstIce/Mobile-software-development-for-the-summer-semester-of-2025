<view class="container">
  <view class="nav-bar">
    <text class="nav-back" bindtap="navigateBack">←</text>
    <text class="nav-title">输入转盘内容</text>
    <text class="nav-confirm" bindtap="confirmInput">确认</text>
  </view>

  <view class="input-section">
    <textarea 
      class="content-input" 
      placeholder="请输入您的转盘内容..." 
      value="{{inputContent}}"
      bindinput="onInputChange"
      maxlength="50"
    ></textarea>
    
    <view class="input-hint">
      <text class="hint-text">{{inputContent.length}}/50</text>
    </view>
  </view>

  <view class="history-section" wx:if="{{historyItems.length > 0}}">
    <text class="section-title">已输入内容</text>
    <view class="history-list">
      <view class="history-item" wx:for="{{historyItems}}" wx:key="id">
        <text class="item-content">{{item.content}}</text>
        <text class="item-user">—— {{item.userName}}</text>
      </view>
    </view>
  </view>
</view>