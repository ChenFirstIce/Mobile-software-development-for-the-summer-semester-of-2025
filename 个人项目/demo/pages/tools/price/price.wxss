/* pages/tools/price.wxss */
.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 0;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #4CAF50;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.nav-left, .nav-right {
  flex: 1;
}

.nav-arrow {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  text-align: center;
  
}

.nav-btn {
  font-size: 28rpx;
  color: white;
  text-align: right;
}

/* 群组信息 */
.group-info {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.group-name {
  display: block;
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.group-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 匿名模式切换 */
.anonymous-section {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.switch-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.switch-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.switch {
  transform: scale(0.8);
}

.switch-desc {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  display: block;
}

/* 成员区域 */
.members-section {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.member-count {
  font-size: 24rpx;
  color: #666;
}

.members-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex-wrap: wrap;
}

.member-avatar {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 3rpx solid #f0f0f0;
}

.avatar-status {
  position: absolute;
  bottom: -5rpx;
  right: -5rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 2rpx solid white;
}

.avatar-status.incomplete {
  background-color: #f44336;
}

.more-btn {
  width: 80rpx;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid #e0e0e0;
}

.more-text {
  font-size: 32rpx;
  color: #666;
  font-weight: bold;
}

/* 图表区域 */
.chart-section {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.chart-container {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 30rpx;
}

.chart-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.chart-area {
  position: relative;
  height: 400rpx;
  display: flex;
  flex-direction: column;
}

.chart-y-axis {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 60rpx;
  width: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.y-label {
  font-size: 24rpx;
  color: #666;
  transform: rotate(-90deg);
}

.chart-content {
  flex: 1;
  margin-left: 60rpx;
  margin-bottom: 60rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
  gap: 20rpx;
}

.chart-line {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  flex: 1;
}

.line-point {
  width: 20rpx;
  background: #4CAF50;
  border-radius: 10rpx;
  min-height: 20rpx;
  transition: all 0.3s ease;
}

.min-line .line-point {
  background: #4CAF50;
}

.max-line .line-point {
  background: #2196F3;
}

.point-value {
  font-size: 20rpx;
  color: #333;
  font-weight: bold;
}

.chart-x-axis {
  display: flex;
  justify-content: space-around;
  margin-left: 60rpx;
  gap: 20rpx;
}

.x-label {
  font-size: 20rpx;
  color: #666;
  text-align: center;
  flex: 1;
}

.chart-empty {
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx 20rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  border: none;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn-input {
  background: #f5f5f5;
  color: #333;
  border: 2rpx solid #ddd;
}

.btn-result {
  background: #4CAF50;
  color: white;
  box-shadow: 0 5rpx 15rpx rgba(76, 175, 80, 0.3);
}

.btn-result:disabled {
  background: #ccc;
  box-shadow: none;
}

/* 重置按钮 */
.reset-section {
  padding: 0 20rpx 20rpx;
}

.btn-reset {
  width: 100%;
  height: 60rpx;
  background: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  font-size: 24rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.btn-cancel {
  flex: 1;
  height: 70rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 35rpx;
  font-size: 28rpx;
  border: 1rpx solid #ddd;
}

.btn-confirm {
  flex: 1;
  height: 70rpx;
  background: #4CAF50;
  color: white;
  border-radius: 35rpx;
  font-size: 28rpx;
  border: none;
}

/* 价格输入样式 */
.price-input-group {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.input-item {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.price-input {
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #f9f9f9;
}

/* 结果弹窗 */
.result-modal .modal-body {
  padding: 40rpx 30rpx;
}

.result-content {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.stats-section {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.stats-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.stats-label {
  font-size: 28rpx;
  color: #666;
}

.stats-value {
  font-size: 32rpx;
  color: #4CAF50;
  font-weight: bold;
}

/* 成员列表弹窗 */
.members-modal .modal-body {
  max-height: 400rpx;
  overflow-y: auto;
}

.members-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.member-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
}

.member-avatar-large {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.member-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
