/* pages/tools/wheel.wxss */
.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 0;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #4CAF50;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.nav-left, .nav-right {
  flex: 1;
}

.nav-arrow {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  text-align: center;
}

.nav-btn {
  font-size: 28rpx;
  color: white;
  text-align: right;
}

/* 群组信息 */
.group-info {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.group-name {
  display: block;
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.group-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 成员区域 */
.members-section {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.member-count {
  font-size: 24rpx;
  color: #666;
}

.members-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex-wrap: wrap;
}

.member-avatar {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 3rpx solid #f0f0f0;
}

.avatar-status {
  position: absolute;
  bottom: -5rpx;
  right: -5rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 2rpx solid white;
}

.avatar-status.incomplete {
  background-color: #f44336;
}

.more-btn {
  width: 80rpx;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid #e0e0e0;
}

.more-text {
  font-size: 32rpx;
  color: #666;
  font-weight: bold;
}

/* 转盘区域 */
.wheel-section {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 20rpx;
  min-height: 600rpx;
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.wheel-container {
  position: relative;
  width: 500rpx;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-wheel {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  border-radius: 50%;
  border: 2rpx dashed #ddd;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.wheel-text {
  transform: rotate(90deg);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 200rpx;
}

.wheel-percentage {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  font-size: 16rpx;
  color: rgba(0, 0, 0, 0.6);
  transform: rotate(90deg);
}

.wheel-pointer {
  position: absolute;
  top: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 40rpx solid #ff6b6b;
  z-index: 10;
}

.wheel-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100rpx;
  height: 100rpx;
  background: grey;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.2);
}

.center-text {
  font-size: 20rpx;
  color: black;
  text-align: center;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx 20rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  border: none;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn-input {
  background: #f5f5f5;
  color: #333;
  border: 2rpx solid #ddd;
}

.btn-start {
  background: #4CAF50;
  color: white;
  box-shadow: 0 5rpx 15rpx rgba(76, 175, 80, 0.3);
}

.btn-start:disabled {
  background: #ccc;
  box-shadow: none;
}

.btn-start.spinning {
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

/* 重置按钮 */
.reset-section {
  padding: 0 20rpx 20rpx;
}

.btn-reset {
  width: 100%;
  height: 60rpx;
  background: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  font-size: 24rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
}

.input-textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.btn-cancel {
  flex: 1;
  height: 70rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 35rpx;
  font-size: 28rpx;
  border: 1rpx solid #ddd;
}

.btn-confirm {
  flex: 1;
  height: 70rpx;
  background: #4CAF50;
  color: white;
  border-radius: 35rpx;
  font-size: 28rpx;
  border: none;
}

/* 结果弹窗 */
.result-modal .modal-body {
  text-align: center;
  padding: 60rpx 30rpx;
}

.result-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.result-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  text-align: center;
}

.result-user {
  font-size: 28rpx;
  color: #666;
}

/* 成员列表弹窗 */
.members-modal .modal-body {
  max-height: 400rpx;
  overflow-y: auto;
}

.members-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.member-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
}

.member-avatar-large {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.member-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
