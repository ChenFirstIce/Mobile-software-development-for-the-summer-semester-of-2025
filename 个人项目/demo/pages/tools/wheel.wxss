.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f7;
}

.nav-bar {
  padding: 30rpx 0;
  background-color: #3a7bd5;
  text-align: center;
}

.nav-title {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.group-info {
  padding: 20rpx 30rpx;
  background-color: white;
  border-bottom: 1px solid #eee;
}

.group-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.group-desc {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}

.members-section {
  padding: 20rpx 30rpx;
  background-color: white;
  margin: 15rpx;
  border-radius: 16rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.member-count {
  font-size: 24rpx;
  color: #666;
}

.members-row {
  display: flex;
  align-items: center;
  gap: 15rpx;
  overflow: hidden;
}

.member-avatar {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 2rpx solid #eee;
}

.avatar-status {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #ff4d4f;
  border: 2rpx solid white;
}

.more-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: #f2f2f2;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ccc;
}

.more-text {
  font-size: 32rpx;
  color: #999;
}

.wheel-section {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  flex: 1;
}

.wheel-container {
  position: relative;
  width: 600rpx;
  height: 600rpx;
}

.wheel {
  width: 100%;
  height: 100%;
  position: relative;
  border-radius: 50%;
  overflow: hidden;
  transform-origin: center;
}

.wheel-part {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  transform-origin: bottom center;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.wheel-text {
  position: absolute;
  width: 50%;
  text-align: center;
  transform-origin: center right;
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  padding-right: 40rpx;
  box-sizing: border-box;
}

.wheel-center {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: white;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
}

.wheel-pointer {
  position: absolute;
  width: 40rpx;
  height: 60rpx;
  top: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 3;
  background-color: #ff4d4f;
  clip-path: polygon(50% 0, 0 100%, 100% 100%);
}

.empty-wheel {
  width: 600rpx;
  height: 600rpx;
  border-radius: 50%;
  background-color: #f2f2f2;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ccc;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.action-buttons {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  padding: 30rpx;
}

.btn {
  width: 240rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border: none;
}

.input-btn {
  background-color: #4caf50;
  color: white;
}

.start-btn {
  background-color: #3a7bd5;
  color: white;
}

.start-btn:disabled {
  background-color: #ccc;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.modal-content {
  width: 540rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 36rpx;
  color: #999;
}

.members-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.member-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100rpx;
}

.member-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.member-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}

.modal-footer {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}

.modal-btn {
  width: 200rpx;
  height: 70rpx;
  background-color: #3a7bd5;
  color: white;
  border-radius: 35rpx;
  border: none;
  font-size: 28rpx;
}

.result-modal {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
}

.result-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.result-content {
  font-size: 32rpx;
  color: #3a7bd5;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-align: center;
  padding: 0 20rpx;
}

.result-user {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 40rpx;
}