/* pages/album/album.wxss */

.top-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.search-box {
  flex: 1;
  position: relative;
}

.search-input {
  width: 100%;
  padding: 20rpx 60rpx 20rpx 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: white;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #999;
}

.type-tabs {
  display: flex;
  background: white;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #4CAF50;
  color: white;
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
}

.album-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.album-item {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.album-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.15);
}

.album-cover {
  position: relative;
  height: 200rpx;
  background: #f5f5f5;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}

.placeholder-icon {
  font-size: 60rpx;
  color: #ccc;
}

.album-type-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  color: white;
}

.album-type-badge.personal {
  background: #2196F3;
}

.album-type-badge.shared {
  background: #FF9800;
}

.album-info {
  padding: 30rpx;
}

.album-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.album-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.album-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: #e0e0e0;
  transform: scale(0.9);
}

.action-icon {
  font-size: 24rpx;
}

.album-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.album-stats {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 24rpx;
}

.stat-text {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.batch-mode {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1rpx solid #eee;
  padding: 30rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

.batch-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.batch-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.batch-actions {
  display: flex;
  gap: 20rpx;
}

.fab {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background: #4CAF50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(76, 175, 80, 0.4);
  z-index: 999;
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 10rpx rgba(76, 175, 80, 0.4);
}

.fab-icon {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .top-bar {
    flex-direction: column;
    align-items: stretch;
  }
  
  .search-box {
    order: 2;
  }
  
  .btn-primary {
    order: 1;
  }
  
  .batch-actions {
    flex-direction: column;
  }
  
  .album-stats {
    flex-direction: column;
    gap: 16rpx;
  }
}
