/* pages/album/create.wxss */

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  color: #666;
}

.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  margin-bottom: 30rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.input-field {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #f9f9f9;
}

.input-field:focus {
  border-color: #4CAF50;
  background: white;
}

/* 相册类型选择器 */
.type-selector {
  display: flex;
  gap: 20rpx;
}

.type-option {
  flex: 1;
  padding: 30rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.3s ease;
  background: white;
}

.type-option.active {
  border-color: #4CAF50;
  background: #f0f8f0;
}

.type-icon {
  display: block;
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.type-text {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.type-desc {
  display: block;
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

/* 共有相册设置 */
.shared-settings {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.group-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: white;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
}

.group-text {
  font-size: 28rpx;
  color: #333;
}

.group-arrow {
  font-size: 24rpx;
  color: #999;
}

.permission-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.permission-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.permission-text {
  font-size: 26rpx;
  color: #333;
}

/* 封面图片上传 */
.cover-upload {
  margin-top: 16rpx;
}

.cover-preview {
  position: relative;
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background: rgba(0, 0, 0, 0.7);
  padding: 16rpx;
}

.cover-btn {
  flex: 1;
  text-align: center;
  padding: 12rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border-radius: 6rpx;
  font-size: 24rpx;
  margin: 0 8rpx;
}

.cover-btn.delete {
  background: rgba(244, 67, 54, 0.8);
}

.cover-upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  background: #f9f9f9;
  transition: all 0.3s ease;
}

.cover-upload-btn:active {
  border-color: #4CAF50;
  background: #f0f8f0;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  color: #999;
}

.upload-text {
  font-size: 26rpx;
  color: #666;
}

/* 标签设置 */
.tags-container {
  margin-top: 16rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx;
  background: #4CAF50;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.tag-text {
  margin-right: 8rpx;
}

.tag-delete {
  font-size: 20rpx;
  font-weight: bold;
}

.add-tag {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  background: #f9f9f9;
  transition: all 0.3s ease;
}

.add-tag:active {
  border-color: #4CAF50;
  background: #f0f8f0;
}

.add-icon {
  font-size: 32rpx;
  color: #4CAF50;
  margin-right: 12rpx;
}

.add-text {
  font-size: 26rpx;
  color: #666;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.btn-primary:disabled {
  background: #ccc;
  color: #999;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

/* 标签分类 */
.tag-categories {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.category-item {
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 20rpx;
}

.category-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.category-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-option {
  padding: 12rpx 20rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 20rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.tag-option.selected {
  background: #4CAF50;
  color: white;
}

/* 群组列表 */
.group-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.group-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.group-item.selected {
  border-color: #4CAF50;
  background: #f0f8f0;
}

.group-info {
  flex: 1;
}

.group-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.group-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.group-status {
  text-align: right;
}

.member-count {
  font-size: 24rpx;
  color: #999;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .type-selector {
    flex-direction: column;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .modal-content {
    width: 95%;
    margin: 20rpx;
  }
}
