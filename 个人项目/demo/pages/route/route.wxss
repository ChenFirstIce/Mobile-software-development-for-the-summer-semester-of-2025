/* pages/route/route.wxss */

page {
  height: 100vh;
  overflow: hidden;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  overflow: hidden;
  position: relative;
}

/* 地图容器 */
.map-container {
  height: 60vh;
  position: relative;
  flex-shrink: 0;
}

.map-controls {
  position: absolute;
  right: 40rpx;
  top: 200rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  z-index: 100;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.control-btn:active {
  transform: scale(0.9);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.2);
}

.control-icon {
  font-size: 32rpx;
  color: #333;
}

.route-map {
  width: 100%;
  height: 100%;
  min-height: 400rpx;
  max-height: 60vh;
}

/* 路线规划面板 */
.route-panel {
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  padding: 15rpx 20rpx 20rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  height: 35vh;
  overflow-y: auto;
  flex-shrink: 0;
  position: relative;
  z-index: 10;
  max-height: 35vh;
}

/* 输入区域 */
.input-section {
  margin-bottom: 15rpx;
}

.input-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  padding: 12rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #4CAF50;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-right: 20rpx;
  min-width: 80rpx;
}

.input-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.input-text {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.input-icon {
  font-size: 32rpx;
  margin-left: 10rpx;
}

/* 交通方式选择 */
.transport-section {
  margin-bottom: 15rpx;
}

.section-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.transport-options {
  display: flex;
  gap: 12rpx;
}

.transport-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 8rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  transition: all 0.3s ease;
  min-height: 70rpx;
}

.transport-item.active {
  background: #4CAF50;
  color: white;
}

.transport-icon {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.transport-name {
  font-size: 20rpx;
  font-weight: 500;
}

/* 路线信息 */
.route-info {
  margin-bottom: 15rpx;
  padding: 12rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 8rpx;
  color: white;
}

.info-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 12rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.info-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.info-value {
  font-size: 28rpx;
  font-weight: bold;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  flex: 1;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.action-btn.primary:disabled {
  background: #ccc;
  color: #999;
}

.action-btn.secondary {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e0e0e0;
}


.action-btn:active {
  transform: translateY(2rpx);
}

/* 搜索弹窗 */
.search-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  width: 100%;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 36rpx;
  color: #999;
  padding: 10rpx;
}

.search-input {
  display: flex;
  padding: 20rpx 30rpx;
  gap: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-input input {
  flex: 1;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border: none;
  font-size: 26rpx;
}

.search-btn {
  padding: 20rpx 30rpx;
  background: #4CAF50;
  color: white;
  border-radius: 8rpx;
  border: none;
  font-size: 26rpx;
}

/* 快速选择 */
.quick-actions {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.quick-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #495057;
  transition: all 0.3s ease;
}

.quick-btn:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.quick-icon {
  font-size: 28rpx;
}

/* 搜索建议 */
.search-suggestions {
  max-height: 300rpx;
  overflow-y: auto;
  border-bottom: 1rpx solid #f0f0f0;
}

.suggestion-item {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fafafa;
  transition: background 0.3s ease;
}

.suggestion-item:active {
  background: #f0f0f0;
}

.suggestion-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.suggestion-address {
  font-size: 24rpx;
  color: #666;
}

.search-results {
  max-height: 400rpx;
  overflow-y: auto;
}

.result-item {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background 0.3s ease;
}

.result-item:active {
  background: #f8f9fa;
}

.result-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.result-address {
  font-size: 24rpx;
  color: #666;
}

.no-results {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .map-container {
    height: 50vh;
  }
  
  .route-panel {
    height: 50vh;
  }
  
  .transport-options {
    flex-wrap: wrap;
  }
  
  .transport-item {
    min-width: 120rpx;
  }
  
  .route-info {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .action-section {
    flex-direction: column;
  }
}

/* 途径点样式 */
.waypoints-section {
  margin: 15rpx 0;
}

.waypoints-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.waypoint-item {
  display: flex;
  align-items: center;
  padding: 12rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.waypoint-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.waypoint-text {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.waypoint-number {
  width: 36rpx;
  height: 36rpx;
  background: #FFC107;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: bold;
}

.waypoint-remove {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #f44336;
  font-size: 28rpx;
  border-radius: 50%;
  transition: background-color 0.3s ease;
}

.waypoint-remove:active {
  background-color: #ffebee;
}

.add-waypoint {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx;
  border: 2rpx dashed #ccc;
  border-radius: 8rpx;
  color: #666;
  font-size: 22rpx;
  transition: all 0.3s ease;
}

.add-waypoint:active {
  background-color: #f5f5f5;
  border-color: #999;
}

.add-icon {
  width: 30rpx;
  height: 30rpx;
  background: #4CAF50;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

/* 小屏幕优化 */
@media (max-height: 600px) {
  .map-container {
    height: 50vh;
  }
  
  .route-panel {
    height: 50vh;
    max-height: 50vh;
  }
  
  .transport-item {
    min-height: 60rpx;
    padding: 10rpx 6rpx;
  }
  
  .transport-icon {
    font-size: 24rpx;
  }
  
  .transport-name {
    font-size: 18rpx;
  }
}
